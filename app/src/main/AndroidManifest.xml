<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieMatch"
        tools:targetApi="31">
        <activity
            android:name="com.mafaly.moviematch.views.MovieWinnerActivity"
            android:exported="false" />
        <activity
            android:name="com.mafaly.moviematch.views.MovieSelection"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name="com.mafaly.moviematch.views.MovieMatchActivity"
            android:exported="false" />
        <activity
            android:name="com.mafaly.moviematch.views.MovieDuelActivity"
            android:exported="false" />
        <activity
            android:name="com.mafaly.moviematch.views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>