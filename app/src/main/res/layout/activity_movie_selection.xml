<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mafaly.moviematch.views.MovieSelection">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selection_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/film_selection_title"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/movie_search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/input_bg"
            android:drawablePadding="10dp"
            android:hint="@string/search_film_or_actor"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/selection_title_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/selection_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/selection_title_tv" />

        <TextView
            android:id="@+id/movie_selection_filter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/filters"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/movie_search_et"
            app:layout_constraintTop_toBottomOf="@+id/movie_search_et" />

        <Spinner
            android:id="@+id/genre_spr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/input_bg"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_selection_filter_tv" />

        <Spinner
            android:id="@+id/platform_spr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/input_bg"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/genre_spr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/genre_spr" />

        <Button
            android:id="@+id/random_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/random_search"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/movie_search_et"
            app:layout_constraintStart_toStartOf="@+id/movie_search_et"
            app:layout_constraintTop_toBottomOf="@+id/genre_spr" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movie_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/movie_cell_layout"
        tools:itemCount="5"
        android:layout_weight="0.3"/>

</LinearLayout>